@model List<WebApp.Entities.Units>
@if (Model != null)
{
    <table class="table">
        <thead>
            <tr>
                <th class="head0 nosort" scope="col" data-sortable="" style="width: 5%;">
                    <input type="checkbox" name="" id="selectAll" />
                </th>
                <th scope="col">STT</th>
                <th scope="col">Đơn vị</th>
                <th scope="col">Số lượng</th>
                <th scope="col">mã sản phẩm</th>
                <th scope="col">ngày tạo</th>
                <th scope="col">ngày Cập nhật</th>
            </tr>
        </thead>
        <tbody>
            @{

                var stt = 1 + (int)ViewBag.Stt;
                foreach (var item in Model)
                {
                    <tr>
                        <td><input type="checkbox" class="ads_Checkbox" value="@item.Id" /></td>
                        <th scope="row">@stt</th>
                        <td><a href="/Units/Edit?Id=@item.Id">@item.Name</a></td>
                        <td>@item.Quantity</td>
                        <td>@item.ProductId</td>
                        <td>@item.CreatedDateUtc</td>
                        <td>@item.UpdatedDateUtc</td>
                    </tr>
                    stt++;
                }

            }

        </tbody>
    </table>
}
