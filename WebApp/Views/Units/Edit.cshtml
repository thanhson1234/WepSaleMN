@model UnitsViewModel
@{
	ViewData["Title"] = "Cập nhật Units";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
	var lstProduct = ViewBag.lstproduct as List<WebApp.Entities.Product>;
}
<div class="col-lg-12">

	<div class="card">
		<div class="card-body">
			<h4 class="widgettitle">Cập nhật Đơn vị theo sản phẩm</h4>
			<div class="widgetcontent">
				<div class="form-horizontal">
					<!-- Horizontal Form -->
					<form id="form_pd" action="/Units/Edit" method="post" enctype="multipart/form-data">
						<input hidden type="text" maxlength="100" id="Id" name="Id" value="@Model.Id">
						<div class="row mb-3">
							<label for="ma_pb" class="col-sm-2 control-label">Nhập Tên Đơn vị tính<span style="color:red">(*)</span></label>
							<div class="col-sm-8">
								<input type="text" class="form-control input-default" placeholder="Đơn vị" maxlength="100" id="Name" name="Name" value = "@Model.Name">
							</div>

							<div class="row mb-3">
								<label for="ma_pb" class="col-sm-2 control-label"> Số lượng<span style="color:red">(*)</span></label>
								<div class="col-sm-8">
									<input type="number" placeholder="Nhập số lượng" id="Quantity" name="Quantity" class="form-control input-default" value="@Model.Quantity" />
								</div>
							</div>
							<div class="row mb-3">
								<label for="ma_pb" class="col-sm-2 control-label">Chọn sản phẩm<span style="color:red">(*)</span></label>
								<div class="col-sm-8">
									<select class="form-control input-default" id="ProductId" name="ProductId">
										<option value="0">Chọn sản phẩm</option>
										@if (lstProduct != null)
										{
											@foreach (var item in lstProduct)
											{
													if (Model.ProductId == item.Id)
													{
														<option value="@item.Id" selected> @item.Name</option>
													}
													else
													{
													<option value="@item.Id">@item.Name</option>
													}
												}
										}
									</select>
								</div>

							</div>
							<div class="row mb-3">
								<label for="ten_pb" class="col-sm-2 control-label">Trạng thái đơn vị </label>
								<div class="col-sm-8">
									<select class="form-control input-default" id="Status" name="Status">
										<option value="1"> Mở</option>
										<option value="0"> Đóng</option>
									</select>
								</div>
							</div>
							<div class="row mb-3">
								<label for="nguoi_sua" class="col-sm-2 control-label">Người sửa</label>
								<div class="col-sm-8">
									<input disabled type="text" class="form-control input-default" value="">
								</div>
							</div>
							<div class="row mb-3">
								<label for="ngay_sua" class="col-sm-2 control-label">Ngày sửa</label>
								<div class="col-sm-8">
									<input disabled type="text" class="form-control input-default" value="">
								</div>
							</div>
							<div class="row mb-3">
								<label for="ngay_tao" class="col-sm-2 control-label">Ngày tạo</label>
								<div class="col-sm-8">
									<input disabled type="text" class="form-control input-default" value="">
								</div>
							</div>

							<div class="text-center">
								<button type="submit" class="btn btn-primary">Lưu</button>
								<button type="button" class="btn btn-secondary" onclick="window.location.href='/Units';">Đóng</button>
							</div>
					</form><!-- End Horizontal Form -->
				</div>

			</div>
		</div>
	</div>
</div>