@model List<WebApp.Entities.AspModule>
@if (Model != null)
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Tên chức năng</th>
                <th scope="col">Link</th>
                <th scope="col">Logo</th>
                <th scope="col">Trạng thái</th>
                <th scope="col">Xóa</th>
            </tr>
        </thead>
        <tbody>
            @{
                var stt = 1 + (int)ViewBag.Stt;
                foreach (var item in Model)
                {
                    <tr>
                        <td><input type="checkbox" class="ads_Checkbox" value="@item.Id" /></td>
                        <th scope="row">@stt</th>
                        <td><a href="/Product/Edit?Id=@item.Id">@item.Name</a></td>
                        <td>@item.link</td>
                        <td>@item.Logo</td>
                        <td>@item.Status</td>
                        <td>
                            <button class="btn btn-danger" id="deleteButton" onclick="DeleteProduct(@item.Id);">Delete</button>
                        </td>
                    </tr>
                    stt++;
                }

            }

        </tbody>
    </table>
}
