@{
	ViewData["Title"] = "Danh sách chức năng";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col-lg-12">

	<div class="card">
		<div class="card-body">
			<h4 class="widgettitle">Cập nhật danh sách chức năng</h4>
			<div class="widgetcontent">
				<div class="form-horizontal">
					<!-- Horizontal Form -->
					<form id="form_pd" action="/Module/Add" method="post" enctype="multipart/form-data">
						<div class="row mb-3">
							<label for="ma_pb" class="col-sm-2 control-label">Nhập Tên Danh sách<span style="color:red">(*)</span></label>
							<div class="col-sm-8">
								<input type="text" class="form-control input-default" placeholder="Loại sản phẩm" maxlength="100" id="Name" name="Name" value="">
							</div>

						</div>
						<div class="row mb-3">
							<label for="ma_pb" class="col-sm-2 control-label">link danh sách<span style="color:red">(*)</span></label>
							<div class="col-sm-8">
								<input type="text" class="form-control input-default" placeholder="nhập link" maxlength="100" id="link" name="link" value="">
							</div>

						</div>
						<div class="row mb-3">
							<label for="ten_pb" class="col-sm-2 control-label">Trạng thái Loại sản phẩm </label>
							<div class="col-sm-8">
								<select class="form-control input-default" id="Status" name="Status">
									<option value="1">Đang Mở</option>
									<option value="0">Đang Đóng</option>
								</select>
							</div>
						</div>
						<div class="row mb-3">
							<label for="nguoi_sua" class="col-sm-2 control-label">Người sửa</label>
							<div class="col-sm-8">
								<input disabled type="text" class="form-control input-default" value="">
							</div>
						</div>
						<div class="row mb-3">
							<label for="ngay_sua" class="col-sm-2 control-label">Ngày sửa</label>
							<div class="col-sm-8">
								<input disabled type="text" class="form-control input-default" value="">
							</div>
						</div>
						<div class="row mb-3">
							<label for="ngay_tao" class="col-sm-2 control-label">Ngày tạo</label>
							<div class="col-sm-8">
								<input disabled type="text" class="form-control input-default" value="">
							</div>
						</div>

						<div class="text-center">
							<button type="submit" class="btn btn-primary">Lưu</button>
							<button type="button" class="btn btn-secondary" onclick="window.location.href='/Company';">Đóng</button>
						</div>
					</form><!-- End Horizontal Form -->
				</div>

			</div>
		</div>
	</div>
</div>